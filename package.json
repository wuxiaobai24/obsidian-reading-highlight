{
  "name": "obsidian-reading-highlight",
  "version": "1.0.0",
  "description": "An Obsidian plugin that supports text selection and highlighting in reading mode, optimized for mobile devices.",
  "main": "main.js",
  "scripts": {
    "dev": "node dev.js",
    "build": "npx esbuild main.ts --bundle --outfile=main.js --format=cjs --platform=node --external:obsidian",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "copy": "node -e \"require('./dev.js').copyToVault()\""
  },
  "keywords": [
    "obsidian",
    "plugin",
    "highlight",
    "text-selection",
    "mobile",
    "reading-mode"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "builtin-modules": "3.3.0",
    "chokidar": "^4.0.3",
    "esbuild": "0.17.3",
    "obsidian": "^1.4.0",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  }
}
